<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_option_toggle"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ingenious.library.IconImageView
            android:id="@+id/iv_option_toggle2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_uploading"
            android:layout_marginBottom="-16dp"
            android:contentDescription="@string/image" />

        <com.ingenious.library.IconImageView
            android:id="@+id/iv_option_toggle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_uploading"
            android:contentDescription="@string/image" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="-30dp"
        android:layout_marginTop="25dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?BackgroundColor_S">

            <com.ingenious.library.TextView
                android:paddingStart="15dp"
                android:text="@string/app_name"
                android:id="@+id/details_cat_name"
                android:layout_width="match_parent"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="?Titel_1"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="?Boder" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_setas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <com.ingenious.library.IconImageView
                            android:layout_marginTop="4dp"
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:backgroundTint="#26FF0267"
                            android:background="@drawable/abs_top_tracks_playlist"
                            android:src="@drawable/ic_interface"
                            app:tint="#FF0267"/>

                        <com.ingenious.library.TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/set_wallpaper"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?Boder" />

                    <LinearLayout
                        android:id="@+id/ll_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <com.ingenious.library.IconImageView
                            android:layout_marginTop="4dp"
                            android:id="@+id/imageView4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:backgroundTint="#260458EC"
                            android:background="@drawable/abs_top_tracks_playlist"
                            android:src="@drawable/ic_star"
                            app:tint="#03a9f4"/>

                        <com.ingenious.library.TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/rate"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?Boder" />

                    <LinearLayout
                        android:id="@+id/ll_download"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <com.ingenious.library.IconImageView
                            android:layout_marginTop="4dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:backgroundTint="#26607D8B"
                            android:background="@drawable/abs_top_tracks_playlist"
                            android:src="@drawable/ic_direction"
                            app:tint="#607d8b"/>

                        <com.ingenious.library.TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/save"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?Boder" />

                    <LinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <com.ingenious.library.IconImageView
                            android:layout_marginTop="4dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:backgroundTint="#2600DD5A"
                            android:background="@drawable/abs_top_tracks_playlist"
                            android:src="@drawable/ic_share"
                            app:tint="#00DD5A"/>

                        <com.ingenious.library.TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="@string/share"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?Boder" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.ingenious.library.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set Wall"
                            android:textColor="?Titel_2" />

                        <com.ingenious.library.TextView
                            android:id="@+id/details_set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?Boder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="center">

                        <com.ingenious.library.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/views"
                            android:textColor="?Titel_2" />

                        <com.ingenious.library.TextView
                            android:id="@+id/details_views"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?Boder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.ingenious.library.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/downloads"
                            android:textColor="?Titel_2" />

                        <com.ingenious.library.TextView
                            android:id="@+id/details_downloads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?Boder" />



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.ingenious.library.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share"
                            android:textColor="?Titel_2" />

                        <com.ingenious.library.TextView
                            android:id="@+id/details_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?Boder" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.ingenious.library.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/resolution"
                            android:textColor="?Titel_2" />

                        <com.ingenious.library.TextView
                            android:id="@+id/details_resolution"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?Boder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.ingenious.library.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/size"
                            android:textColor="?Titel_2" />

                        <com.ingenious.library.TextView
                            android:id="@+id/details_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="?Boder" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.ingenious.library.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/types"
                            android:textColor="?Titel_2" />

                        <com.ingenious.library.TextView
                            android:id="@+id/details_tipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?Titel_2"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?Boder" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <com.ingenious.library.TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ratings"
                            android:textColor="?Titel_2" />

                        <RatingBar
                            android:layout_marginBottom="40dp"
                            android:id="@+id/details_rating"
                            style="@style/RatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:max="5"
                            android:numStars="5"
                            android:theme="@style/RatingBar1" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>