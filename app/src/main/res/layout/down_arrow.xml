<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:backgroundTint="@color/colorAccent_Light"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_home_text"
        android:id="@+id/top_arr"
        android:layout_width="200dp"
        android:layout_height="60dp">

        <com.ingenious.library.TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="@string/open"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/bot_arr"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/top_arr"
        android:layout_alignStart="@+id/top_arr"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_down_arrow"
        app:tint="@color/colorAccent_Light" />

</RelativeLayout>