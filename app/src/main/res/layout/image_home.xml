<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootlayout"
    android:layout_width="160dp"
    android:layout_height="230dp"
    android:gravity="center"
    android:paddingStart="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_home_latest"
        android:layout_width="160dp"
        android:src="@mipmap/ic_launcher"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="0dp" />


    <RelativeLayout
        android:id="@+id/pay"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/background_pre2"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingBottom="2dp"
            android:textSize="16dp"
            android:text="Premium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:id="@+id/my_view"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_gradient_black"
        android:gravity="center_vertical" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <com.like.LikeButton
            android:id="@+id/button_home_fav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:anim_scale_factor="2"
            app:circle_end_color="@color/colorAccent_Light"
            app:circle_start_color="#FF0070"
            app:dots_primary_color="@color/colorAccent_Light"
            app:dots_secondary_color="#FF0070"
            app:icon_size="30dp"
            app:is_enabled="true"
            app:like_drawable="@drawable/ic_bookmark"
            app:unlike_drawable="@drawable/ic_bookmark2" />

        <TextView
            android:text="@string/app_name"
            android:textColor="#fff"
            android:id="@+id/tv_home_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/button_home_fav"
            android:layout_toStartOf="@+id/button_home_fav"
            android:ellipsize="end"
            android:padding="5dp"
            android:maxLines="1"/>

    </RelativeLayout>

</RelativeLayout>